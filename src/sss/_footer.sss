			// 	transition: filter .4s ease 

			// &:hover
			// 	&:before
			// 		filter: invert(1)
			// 	background-color: var(--main-color)
			// 	color: #fff




	.soc__link
		border-color: #e2e2e2


.dev
	display: flex
	align-items: center
	background: #fff
	border-radius: 5px
	padding: 6px 8px


@media screen and (max-width: 1500px)
	
	.footer-el
		&__title
			margin-bottom: 10px

	.footer-logo
		max-width: 230px

	.footer
		padding: 0 0 40px
		margin-top: 60px

		&-top
			padding-top: 45px

@media screen and (max-width: 1400px)

	.footer-logo
		margin-right: 0

	
	.footer-el
		margin-left: 40px

	.footer-bot
		margin-top: 35px
		padding-top: 30px


@media screen and (max-width: 1000px)
	
	.footer-top, .footer-btn, .footer-soc
		display: none

	.footer-bot
		margin-top: 0
		padding-top: 30px


@media screen and (max-width: 667px)
	
	.footer
		padding: 0 0 30px
		margin-top: 31px
