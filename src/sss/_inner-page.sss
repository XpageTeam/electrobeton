.gallery
	&__title
		font-size: rem(22)
		font-weight: 300
		margin-bottom: 20px

	&__list
		display: flex
		flex-wrap: wrap
		margin: 0 0 -20px -20px

	&__item
		width: calc((100% - 20px * 4) / 4)
		margin: 0 0 20px 20px
		box-shadow: 0 0 20px 2px rgba(0,0,0,.16)

		img
			display: block


@media (max-width: 667px)
	.gallery

		&__item
			width: 100%