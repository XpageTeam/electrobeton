.footer
	color: #000
	padding: 0 0 60px
	margin-top: 85px

	&-r
		display: flex
		flex-direction: column
		align-items: flex-end


	&-el
		margin-left: 60px
		display: flex
		flex-direction: column
		align-items: flex-start

		&__title
			position: relative
			margin-bottom: 20px
			padding-left: 20px

			&:before
				content: ''
				display: block
				position: absolute
				left: 0
				top: 3px
				size: 10px 14px
				background-image: url('../img/ico-location.svg')
				background-position: center
				background-repeat: no-repeat

		&:nth-child(3)
			.footer-el__title

				&:before
					size: 13px
					background-image: url('../img/ico-phone.svg')

		&:nth-child(4)
			.footer-el__title

				&:before
					size: 13px
					background-image: url('../img/ico-mail.svg')

		&__text
			display: flex
			flex-direction: column
			align-items: flex-start


	&-top
		display: flex
		align-items: flex-start
		border-top: 1px solid #F2F2F2
		padding-top: 60px

	&-bot
		display: flex
		align-items: flex-start
		margin-top: 50px
		padding-top: 50px
		border-top: 1px solid #F2F2F2
		justify-content: space-between

	a
		text-decoration: none


	&-btn
		.btn
			position: relative
			// background-color: var(--second-color)
			display: flex
			align-items: center


			
